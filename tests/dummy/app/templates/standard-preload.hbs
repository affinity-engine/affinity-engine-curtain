{{#affinity-engine theaterId=theaterId config=config fixtures=fixtures as |theater|}}
  {{#if theater.isLoaded}}
    {{preloadedImage}}
  {{else}}
    {{#affinity-engine-curtain theaterId=theater.theaterId filesToPreload=(hash backdrops="src" expressions="src") completePreload=theater.completePreload as |curtain|}}
      <h1 data-test={{hook "title"}}>{{curtain.title}}</h1>

      <div data-test={{hook "progress"}}>{{curtain.progress}}</div>
    {{/affinity-engine-curtain}}
  {{/if}}
{{/affinity-engine}}
