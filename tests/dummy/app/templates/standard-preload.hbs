{{#ember-theater theaterId=theaterId config=config fixtures=fixtures as |theater|}}
  {{#if theater.isLoaded}}
    {{preloadedImage}}
  {{else}}
    {{#ember-theater-curtain theaterId=theater.theaterId filesToPreload=(hash backdrops="src" expressions="src") completePreload=theater.completePreload as |curtain|}}
      <h1 data-test={{hook "title"}}>{{curtain.title}}</h1>

      <div data-test={{hook "progress"}}>{{curtain.progress}}</div>
    {{/ember-theater-curtain}}
  {{/if}}
{{/ember-theater}}
